                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"P@ssword123\",\n  \"roles\": [\"{{roleId}}\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
